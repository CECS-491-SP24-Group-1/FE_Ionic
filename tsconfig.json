{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": true, // Set to true for better interop with CommonJS modules
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"baseUrl": "src",
		"paths": {
			"@/*": [
				"./*"
			]
		}
	},
	"include": [
		"./src/**/*", // Include all files in the src directory
		"./types/**/*.d.ts",
		"./types/**/*.ts"
	],
	"references": [
		{
			"path": "./tsconfig.node.json" // Keep this if you're using it for Node references
		}
	]
}